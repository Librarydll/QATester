<UserControl x:Class="QATester.TextBlockShowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QATester"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="50" d:DesignWidth="200">
    <Border BorderBrush="LightBlue" BorderThickness="4" CornerRadius="5">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <RadioButton HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Center" GroupName="{Binding RadioButtonGroupName,UpdateSourceTrigger=PropertyChanged}" IsChecked="{Binding Path=RadioButtonIsChecked,UpdateSourceTrigger=PropertyChanged}"></RadioButton>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <TextBlock  TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="17" Text="{Binding CurrentText,UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
